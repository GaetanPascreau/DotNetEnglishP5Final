@model IEnumerable<TheCarHubApp.Data.CarMake>

@{
    ViewData["Title"] = "Index";
}


<div style="display:flex;">
    <h2><a asp-controller="Cars" asp-action="Index"> Cars Management | </a></h2>
    <h2><a asp-controller="CarModels" asp-action="Index"> Models management |</a></h2>
    <h2> Makes Management</h2>
</div>

<p>
    <a asp-action="Create">Create New Make</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MakeName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MakeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
