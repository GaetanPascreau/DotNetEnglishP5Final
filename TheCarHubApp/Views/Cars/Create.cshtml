@model TheCarHubApp.ViewModels.CarCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<script type="text/javascript"
        src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js">
</script>

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarMakeId" class="control-label">Make</label>
                <select id="CarMakeId" asp-for="CarMakeId" asp-items="@(new SelectList(ViewBag.ListofCarMake, "Id", "MakeName"))">
                </select>
                <span asp-validation-for="CarMakeId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CarModelId" class="control-label">Model</label>
                <select id="CarModelId" asp-for="CarModelId">
                </select>
                <span asp-validation-for="CarModelId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <select id="Year" asp-for="Year" asp-items="@(new SelectList(ViewBag.YearList, "Value", "Text"))">
                </select>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trim" class="control-label"></label>
                <input asp-for="Trim" class="form-control" />
                <span asp-validation-for="Trim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milleage" class="control-label"></label>
                <input asp-for="Milleage" class="form-control" />
                <span asp-validation-for="Milleage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Setup Margin ($500 by default)</label>
                <input class="form-control" id="Margin" placeholder="500" />
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasePrice" class="control-label"></label>
                <input asp-for="PurchasePrice" class="form-control" id="PurchasePrice" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repairs" class="control-label"></label>
                <input asp-for="Repairs" class="form-control" />
                <span asp-validation-for="Repairs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairCost" class="control-label"></label>
                <input asp-for="RepairCost" class="form-control" id="RepairCost" />
                <span asp-validation-for="RepairCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LotDate" class="control-label"></label>
                <input asp-for="LotDate" class="form-control" />
                <span asp-validation-for="LotDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPrice" class="control-label"></label>
                <input asp-for="SellingPrice" class="form-control" id="SellingPrice" readonly />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleDate" class="control-label"></label>
                <input asp-for="SaleDate" class="form-control" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Photos" class="control-label"></label>
                <div class="custom-file">
                    <input multiple asp-for="Photos" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script type="text/javascript">
    var carModelUrl = '@Url.Action("FetchCarModel")';
    var carModels = $('#CarModelId');

    $('#CarMakeId').change(function () {
        var CarMakevalue = parseInt($('#CarMakeId').val());
        carModels.empty();
        $.getJSON(carModelUrl, { Id: CarMakevalue }, function (data) {
            if (!data) {
                return;
            }
            carModels.append($('<option></option>)').val('').text('--Select a Car Model'));
            $.each(data.modelList, function (index, item) {
                carModels.append($('<option></option>').val(item.id).text(item.modelName));
            });
        });
    });

    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileLabel = $(this).next('.custom-file-label');
            var files = $(this)[0].files;
            if (files.length > 1) {
                fileLabel.html(files.length + ' files selected');
            }
            else if (files.length == 1) {
                fileLabel.html(files[0].name);
            }
        });
    });

    //automatic calculation of Selling Price
    $(document).ready(function () {
        var placeholder = document.getElementById("Margin").getAttribute("placeholder");
        console.log(placeholder);
        console.log($("#Margin").val());
        if ($("#Margin").val() == "") {
            $("#PurchasePrice, #RepairCost").on("input", calc)
            console.log("margin input field wasn't filled")
        }
        else {
            $("#Margin, #PurchasePrice, #RepairCost").on("input", calc)
        }
        $("#calc").on("click", calc);

        function calc() {
            var purchasePrice = $("#PurchasePrice").val();
            var repairCost = $("#RepairCost").val();
            var margin = $("#Margin").val() != "" ? $("#Margin").val() : 500;
            console.log(margin);
            $('#SellingPrice').val( parseInt( purchasePrice) + parseInt(repairCost) + parseInt(margin));
        }
    });

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}