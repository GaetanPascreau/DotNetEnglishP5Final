@model TheCarHubApp.Data.Car
@*@model TheCarHubApp.ViewModels.CarCreateViewModel*@

@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/Images/" + (Model.PhotoPath ?? "noimage.jpg");
    //var photoPath = "~/Images/" + (Model.Photo.FileName ?? "noimage.jpg");
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CarMakeId" />
            <input type="hidden" asp-for="CarModelId" />

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MakeName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MakeName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModelName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModelName)
                </dd>
            </dl>

            <div class="form-group">
                <label asp-for="VIN" class="control-label"></label>
                <input asp-for="VIN" class="form-control" />
                <span asp-validation-for="VIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trim" class="control-label"></label>
                <input asp-for="Trim" class="form-control" />
                <span asp-validation-for="Trim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchaseDate" class="control-label"></label>
                <input asp-for="PurchaseDate" class="form-control" />
                <span asp-validation-for="PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PurchasePrice" class="control-label"></label>
                <input asp-for="PurchasePrice" class="form-control" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repairs" class="control-label"></label>
                <input asp-for="Repairs" class="form-control" />
                <span asp-validation-for="Repairs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RepairCost" class="control-label"></label>
                <input asp-for="RepairCost" class="form-control" />
                <span asp-validation-for="RepairCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LotDate" class="control-label"></label>
                <input asp-for="LotDate" class="form-control" />
                <span asp-validation-for="LotDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SellingPrice" class="control-label"></label>
                <input asp-for="SellingPrice" class="form-control" />
                <span asp-validation-for="SellingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaleDate" class="control-label"></label>
                <input asp-for="SaleDate" class="form-control" />
                <span asp-validation-for="SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Milleage" class="control-label"></label>
                <input asp-for="Milleage" class="form-control" />
                <span asp-validation-for="Milleage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath" alt="photo of the car" asp-append-version="true" />
                <button asp-action="DeletePhoto">Delete Photo</button>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="PhotoPath" class="form-control custom-file-input" />
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
